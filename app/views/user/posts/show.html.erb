<%= attachment_image_tag @post, :image, :fill, 80, 80, format: 'jpeg' %>
<%= @post.user.user_name %>
<%= @post.body %>
<!--コメント表示-->
<table>
	<thead>
		<tr>
			<th>ユーザー名</th>
			<th>コメント内容</th>
			<th>コメント日時</th>
		</tr>
	</thead>
	<tbody>
		<% @post.post_comments.each do |post_comment| %>
		<tr>
			<td><%= post_comment.user.user_name %></td>
			<td><%= post_comment.comment %></td>
			<td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<!--コメント入力フォーム-->
<%= form_for [@post, @post_comment] do |f| %>
 <%= f.text_area :comment %>
 <%= f.submit "コメントする" %>
<% end %>