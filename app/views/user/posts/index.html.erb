<h1>タイムライン</h1>

<table>
	<thead>
		<tr>
			<th>ユーザー名</th>
			<th>画像</th>
			<th>内容</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
		<tr>
			<td><%= post.user.user_name %></td>

			<td><%= link_to post_path(post.id) do %><%= attachment_image_tag post, :image, :fill, 60, 60, format: 'jpeg' %>
				<% end %>
			                    </td>
			<td><%= link_to post_path(post.id) do %>
				 <%= post.body %><% end %></td>
		    <td><%= post.post_comments.count %>コメント<td>
		</tr>
		<% end %>
	</tbody>
</table>
