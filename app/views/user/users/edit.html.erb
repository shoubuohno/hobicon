<h1>プロフィール編集</h1>
<%= form_for @user do |f| %>
 <!--画像-->
 <%= f.attachment_field :image, class: 'img_field', style: 'display:none' %>
 <%= attachment_image_tag @user, :image, :fill, 100, 100, fallback: 'no_image.jpg', onClick: "$('.img_field').click()", class: 'center-block img-thumbnail img-responsive img_prev' %>
 <%= f.label :ユーザー名 %>
 <%= f.text_field :user_name %><br />
 <!--住んでいる地域-->
 <h4>住んでいる地域</h4>
 <%= f.select :area, User.areas.keys, {} %>
 <!-- 趣味のタグ付け -->

 <!-- ここまで -->
 <h4>自己紹介</h4>
 <%= f.text_area :introduction %><br />
 <%= f.submit "変更する" %>
<% end %>
