<!DOCTYPE html>
<html>
  <head>
    <title>H2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar fixed-top navbar-dark bg-dark">
        <h3 class="text-light">HobiCon</h3>
      <!--ログインしていた場合表示されるヘッダー-->
        <ul class="list-unstyled list-inline">
              <% if user_signed_in? %>
                <li class="list-inline-item">
                  <%= link_to "マイページ", users_path, class: 'text-light' %>
                </li>
                <li class="list-inline-item">
                  <%= link_to '趣味仲間を探す', user_list_path, class: 'text-light' %>
                </li>
                <li class="list-inline-item">
                  <%= link_to "タイムライン", posts_path, class: 'text-light' %>
                </li>
                <li class="list-inline-item">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'text-light'  %>
                </li>
        <!--ログインしていない場合表示されるヘッダー-->
              <% else %>
              　<li class="list-inline-item">
                  <%= link_to "TOP", root_path, class: 'text-light' %>
                </li>
                <li class="list-inline-item">
                  <%= link_to "ログイン", new_user_session_path, class: 'text-light' %>
                </li>
                <li class="list-inline-item">
                  <%= link_to "新規会員登録", new_user_registration_path, class: 'text-light' %>
                </li>
              <% end %>
        </ul>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <nav class="navbar fixed-bottom navbar-dark bg-dark">
    </footer>
  </body>
</html>
